<Window x:Class="Tutorial_19___Opening_Windows.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutorial_19___Opening_Windows.View"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="ModalWindow" Height="300" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="tbInput" Width="200" Height="40" Margin="5" TextChanged="tbInput_TextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="OK" Width="50" Height="40" Margin="2" Click="btnOK_Click" IsEnabled="False"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="40" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
