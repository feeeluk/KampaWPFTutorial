<Window x:Class="Tutorial_10___Open_File_Dialog__file_picker_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutorial_10___Open_File_Dialog__file_picker_"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            x:Name="btnFire"
            Grid.Row="0"
            Content="Fire"
            FontSize="20"
            Width="150"
            Height="50"
            Click="btnFire_Click"/>

        <TextBlock
            x:Name="tbInfo"
            Grid.Row="1"
            FontSize="20"
            Width="600"
            Height="50"
            HorizontalAlignment="Center"/>

    </Grid>
</Window>
