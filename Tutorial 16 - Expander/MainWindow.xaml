<Window x:Class="Tutorial_16___Expander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutorial_16___Expander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" >
            <TextBlock FontSize="20" Text="Name"/>
            <Expander Header="More details">
                <TextBlock FontSize="20" Text="Description"/>
            </Expander>
            <Button x:Name="btnDetails" Width="120" Height="30" Content="Expand / Collapse" Click="Button_Click" HorizontalAlignment="Left"/>
        </StackPanel>

        <Expander x:Name="expanderDetails" Grid.Column="1" ExpandDirection="Left" Background="green" BorderThickness="0">
            <Rectangle
                Fill="Green"
                Width="125"/>
        </Expander>

    </Grid>
</Window>
